<Page x:Class="Blackjack.GameBoard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="600"
	Title="GameBoard">

  <Grid Background="DarkGreen">
    <Button Content="Deal" Height="35" HorizontalAlignment="Left" Margin="286,424,0,0" Name="DealButton" VerticalAlignment="Top" Width="75" Click="DealButton_Click" />
    <Button Content="Hit" Height="35" HorizontalAlignment="Left" Margin="391,424,0,0" Name="HitButton" VerticalAlignment="Top" Width="75" Click="HitButton_Click" />
    <Button Content="Stand" Height="35" HorizontalAlignment="Left" Margin="491,424,0,0" Name="StandButton" VerticalAlignment="Top" Width="75" />
    <Button Content="Exit" Height="25" HorizontalAlignment="Left" Margin="10,10,0,0" Name="ExitButton" VerticalAlignment="Top" Width="41" Click="ExitButton_Click" />
    <Grid Width="600">
      <StackPanel Height="100" HorizontalAlignment="Center" Width="Auto" Margin="0,305,0,0" Name="HumanPanel" VerticalAlignment="Top" Orientation="Horizontal" />
      <StackPanel Height="100" HorizontalAlignment="Center" Width="Auto" Margin="0,80,0,0" Name="DealerPanel" VerticalAlignment="Top" Orientation="Horizontal" />
    </Grid>
    <Label Content="Dealer" Height="33" HorizontalAlignment="Center" Name="DealerLabel" VerticalAlignment="Top" Width="60" FontSize="18" />
  </Grid>
</Page>
